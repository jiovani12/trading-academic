{% extends 'base.html.twig' %}


{% block main %}
<div class="container mt-4">
    <h1 class="mb-4">{{ form.vars.value.id ? 'Modifier' : 'Nouvelle' }} Formation</h1>

    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
        <div class="mb-3">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.prix) }}
            {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.prix) }}
        </div>

        <button type="submit" class="btn btn-success mt-2">{{ form.vars.value.id ? 'Modifier' : 'Créer' }}</button>
    {{ form_end(form) }}

    <a href="{{ path('app_formation_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
</div>
{% endblock %}
